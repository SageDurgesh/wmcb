<form name="createteam" class="form-horizontal" role="form" novalidate>
    <div class="form-group" ng-class="{'has-error': myForm.FirstName.$invalid && myForm.$dirty}">
        <label class=" control-label col-sm-2" for="firstname">
            First Name:
        </label>
        <div class="col-sm-10">
            <input name="FirstName" type="text" class="form-control" id="firstname" placeholder="First Name" ng-model="registration.FirstName" required>
            <span ng-show=" myForm.FirstName.$invalid">Required</span>
        </div>
    </div>
    <div class="form-group" ng-class="{'has-error': myForm.LastName.$invalid}">
        <label class="control-label col-sm-2" for="lastname">Last Name:</label>
        <div class="col-sm-10">
            <input name="LastName" type="text" class="form-control" id="lastname" placeholder="Last Name" ng-model="registration.LastName" required>
            <span class="has-error" ng-show="myForm.LastName.$invalid">Required</span>
        </div>
    </div>
    <div class="form-group" ng-class="{'has-error': myForm.Phone.$invalid}">
        <label class="control-label col-sm-2" for="phone">Phone:</label>
        <div class="col-sm-10">
            <input name="Phone" type="tel" class="form-control" id="phone" placeholder="Phone number" ng-model="registration.Phone" required>
            <span ng-show="myForm.Phone.$invalid">Required</span>
        </div>
    </div>
    <div class="form-group" ng-class="{'has-error': myForm.Email.$invalid}">
        <label class="control-label col-sm-2" for="email">Email:</label>
        <div class="col-sm-10">
            <input name="Email" type="email" class="form-control" id="email" placeholder="Email Address" ng-model="registration.Email" required>
            <span ng-show=" myForm.Email.$invalid">Required</span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Add Team Member</button>
        </div>
    </div>
</form>
