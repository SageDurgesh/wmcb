
@{
    ViewBag.Title = "Grounds";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/angular/controllers/GroundController.js"></script>
<h2>Grounds</h2>  
<div ng-controller="GroundCtrl">
    <table class="table table-hover col-md-5 col-lg-5">
        <thead>
            <tr><th>Ground</th><th>Address</th><th>Map</th></tr>
        </thead>
        <tbody>            
            <tr ng-repeat="ground in grounds">
                <td>{{ground.Name}}</td>
                <td>{{ground.Address}}</td>
               <td></td>
            </tr>                 
        </tbody>
    </table>
  </div>
<div style="width:100%;">&nbsp;</div>



