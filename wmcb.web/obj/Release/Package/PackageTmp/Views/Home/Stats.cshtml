@{
    ViewBag.Title = "Stats";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        $("#divPlayers").hide();
        $("#divResults").show();
        $("#divStats").hide();
        // Initialize tooltip
        $('[data-toggle="tooltip"]').tooltip({
            placement: 'top'
        });
        $("#btnPlayers").click(function () {
            $("#divPlayers").show();
            $("#divResults").hide();
            $("#divStats").hide();
        });
        $("#btnResults").click(function () {
            $("#divPlayers").hide();
            $("#divResults").show();
            $("#divStats").hide();
        });
        $("#btnStats").click(function () {
            $("#divPlayers").hide();
            $("#divResults").hide();
            $("#divStats").show();
        });
    });
</script>

<h2>Statistics</h2>

<div id="divbtns">
    <div class="btn-group" role="group">
        <button type="button" class="btn btn-warning" id="btnResults">Match Results</button>
        <button type="button" class="btn btn-warning" id="btnStats">Statistics</button>
        <button type="button" class="btn btn-warning" id="btnPlayers">Players and Officials</button>


    </div>
</div>
