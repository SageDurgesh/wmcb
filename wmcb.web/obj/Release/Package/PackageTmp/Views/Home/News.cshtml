
@{
    ViewBag.Title = "News";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/angular/controllers/NewsController.js"></script>
<h2>News</h2>
<div ng-controller="NewsCtrl">
    <div ng-repeat="news in News">
        <h3>{{news.Headline}}</h3>
        <h5><small>WMCB. <em> {{news.CreatedOn | date: 'longDate'}}</em></small></h5>
        <div ng-bind-html="news.Content | sanitize">
        </div>
    </div>
</div>
