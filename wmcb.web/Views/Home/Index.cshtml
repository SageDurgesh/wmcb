            </div>
            <div class="panel-body">
                Coming Soon...
            </div>
        </div>*@
        <br />
        <div class="panel panel-default">
            <div class="panel-heading" style="background-color:none;background:none;">
                <h3 class="panel-title"><strong>Upcoming Games</strong></h3>
            </div>
            <div class="panel-body">
                <table class ="table table-hover col-md-5 col-lg-5">
                    <tbody >
                    <tr ng-repeat="game in UpcomingGames">
                        <td>
                            <span>{{game.Date | date:'EEE, MM/dd'}} &#64; {{game.Time}} : {{game.Home}} vs {{game.Away}}</span>
                        </td>
                    </tr>
                    </tbody>

                </table>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="well-sm text-center">
            <div>
                <div><h6>Sponsors</h6></div>
                <div>
                    <img src="~/Images/ads/zeesports.jpg" width="200" height="150" />
                </div>
                <div>
                    <img src="~/Images/ads/lancesoft.jpg" width="200" height="150" />
                </div><br />
            </div>
        </div>
