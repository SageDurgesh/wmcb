<script src="~/Scripts/angular/controllers/IndexController.js"></script>

<div class="row" ng-controller="IndexCtrl">
    <div class="visible-xs visible-sm"><br /><br /></div>
    <div class="col-md-6">
        <div ng-repeat="news in latestNewsFeed">
            <h3>{{news.Headline}}</h3>
            <h5><small>{{news.CreatedBy}}. <em> {{news.CreatedOn | date: 'longDate'}}</em></small></h5>
            <div ng-bind-html="news.Content | sanitize">
            </div>
        </div>
        <div class="text-right"><br/>
            <a href="~/Home/News" class="btn btn-default">Read all updates <i class="glyphicon glyphicon-chevron-right"></i></a>
        </div>
    </div>
    <div class="col-md-3">
        @*<br /><br />
        <div class="panel panel-default">
            <div class="panel-heading" style="background-color:none;background:none;">
