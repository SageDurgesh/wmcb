<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - WMCB</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/angularjs")
    <script src="~/Scripts/angular-ui/ui-bootstrap.min.js"></script>
    <script src="~/Scripts/angular-ui/ui-bootstrap-tpls.min.js"></script>
</head>
<body ng-app="WMCBApp">
   
    <div class="navbar  navbar-fixed-top wmcbclearbackground">
       <div class="navbar-brand logo ">
            <a class="visible-lg" href="/Home/Index">
                <img id="wmcblogo" src="~/Images/WMCB_LOGO_400x400.jpg" height="140" width="150" />
            </a>
            <a class="visible-md visible-xs visible-sm" href="/Home/Index">
                <img id="wmcblogo" src="~/Images/WMCB_LOGO_400x400.jpg" width="115" height="113" />
            </a>
        </div>
        <div class="logoname">Washington Metropolitan Cricket Board</div>
        <div class="navbar-header navbar-inverse wmcbnavbar">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

        </div>
        <div class="navbar-collapse collapse navbar-inverse wmcbnavbar">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("HOME", "Index", "Home")</li>
                <li>@Html.ActionLink("FIXTURES", "Fixtures", "Home")</li>
                <li>@Html.ActionLink("POINTS", "Points", "Home")</li>
                <li>@Html.ActionLink("STATISTICS", "Stats", "Home")</li>
                <li>@Html.ActionLink("GROUNDS", "Grounds", "Home")</li>
                <li>@Html.ActionLink("DOWNLOADS", "Downloads", "Home")</li>
                <li class="hidden-md hidden-sm visible-xs">@Html.ActionLink("GALLERY", "Gallery", "Home")</li>
                <li class="hidden-md hidden-sm visible-xs">@Html.ActionLink("NEWSLETTER", "Newsletter", "Home")</li>

                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        ABOUT <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu wmcbnavbar navbar-inverse">
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        @if (ViewContext.HttpContext.User.Identity.IsAuthenticated)
                        {
                            <li>@Html.ActionLink("Sign Out", "Logout", "Account")</li>
                        }
                        else
                        {
                            <li>@Html.ActionLink("Login", "Index", "Account")</li>
                        }
                    </ul>
                </li>
            </ul>
        </div>

    </div>
    <div class="row">
        <div>
            @if (Request.IsAuthenticated)
            {
                Html.RenderPartial("_AdminMenu");
            }
        </div>
        <div id="body" class="col-md-offset-2 container body-content">
            @RenderBody()
            <hr />
            <footer>
                <div class="row">
                    <div class="col-md-6"><p>&copy; @DateTime.Now.Year - Washington Metropolitan Cricket Board</p></div>
                    @*<div class="col-md-6 fb-like text-right" data-href="https://developers.facebook.com/docs/plugins/" data-layout="button" data-action="like" data-show-faces="true" data-share="false"></div>*@
                </div>

            </footer>

        </div>
    </div>


    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
