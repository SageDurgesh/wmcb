@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Register - New User</h2>
<script src="~/Scripts/wmcb/Register.js"></script>
<script src="~/Scripts/angular/controllers/RegistrationController.js"></script>

<div ng-controller="RegistrationCtrl" ng-init="init()">
    <form name="myForm" class="form-horizontal" role="form" ng-submit="registerUser(myForm.$valid)" ng-show="myresult.Code==-100" novalidate>
        <div class=" form-group" ng-class="{'has-error': myForm.FirstName.$invalid && myForm.$dirty}">
            <label class=" control-label col-sm-2" for="firstname">
                First Name:
            </label>
            <div class="col-sm-10">
                <input name="FirstName" type="text" class="form-control" id="firstname" placeholder="First Name" ng-model="registration.FirstName" required>
                <span ng-show="myForm.FirstName.$invalid && myForm.FirstName.$dirty">Required</span>
            </div>
        </div>
        <div class="form-group" ng-class="{'has-error': myForm.LastName.$invalid && myForm.LastName.$dirty}">
            <label class="control-label col-sm-2" for="lastname">Last Name:</label>
            <div class="col-sm-10">
                <input name="LastName" type="text" class="form-control" id="lastname" placeholder="Last Name" ng-model="registration.LastName" required>
                <span class="has-error" ng-show="myForm.LastName.$invalid && myForm.LastName.$dirty">Required</span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="phone">Phone:</label>
            <div class="col-sm-10">
                <input name="Phone" type="tel" class="form-control" id="phone" placeholder="Phone number" ng-model="registration.Phone">
            </div>
        </div>
        <div class="form-group" ng-class="{'has-error': myForm.Email.$invalid && myForm.Email.$dirty}">
            <label class="control-label col-sm-2" for="email">Email:</label>
            <div class="col-sm-10">
                <input name="Email" type="email" class="form-control" id="email" placeholder="Email Address" ng-model="registration.Email" required>
                <span ng-show=" myForm.Email.$invalid && myForm.Email.$dirty">Required</span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="team">Team:</label>
            <div class="col-sm-10">
                <div class="btn-group" dropdown>
                    <button type="button" class="btn btn-warning">{{SelectedTeamText}}</button>
                    <button type="button" class="btn btn-warning dropdown-toggle" dropdown-toggle>
                        <span class="caret"></span>
                        <span class="sr-only">Split button!</span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        <li ng-repeat="m in Teams"><a href="#" ng-click="SelectTeam(m)">{{m.Name}}</a></li>
                    </ul>
                </div>
            </div>
        </div>
        @*<div class="form-group" ng-class=" {'has-error': myform.Password.$invalid && myForm.Password.$dirty}">
                <label class="control-label col-sm-2" for="pwd">Password:</label>
                <div class="col-sm-10">
                    <input name="Password" type="password" class="form-control" id="pwd" placeholder="Enter password" ng-model="registration.Password" required>
                    <span ng-show="registration.Password=='' && myForm.Password.$dirty">Required</span>
                </div>
            </div>
            <div class="form-group" ng-class="{'has-error': myForm.ConfirmPassword.$invalid && myForm.ConfirmPassword.$dirty }">
                <label class="control-label col-sm-2" for="pwd">Re-enter Password:</label>
                <div class="col-sm-10">
                    <input name="ConfirmPassword" type="password" class="form-control" id="confirmpwd" placeholder="Re-enter password" ng-model="registration.ConfirmPassword" compare-to="registration.Password">
                </div>
            </div>*@
        @*<div ng-controller="CaptchaCtrl">
                <div captcha options="captchaOptions"></div>
            </div>*@
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button id="btnRegister" type="submit" class="btn btn-default">Register</button>
            </div>
        </div>
    </form>

    <div ng-show="myresult.Code!=''">
        {{myresult.Message}}
    </div>
</div>

